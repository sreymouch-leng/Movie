<%= form_for(@movies) do |f| %>
 <%= render "shared/errors", object: @movies %>
  
  <fieldset>
    <ol>
      <li>
    <%=f.label :title%>
    <%=f.text_field :title, autofocus: true %> 
    </li>
    <li>
    <%=f.label :description%>
    <%=f.text_area :description , cols: 40 ,rows: 7%>
    </li>
    <li>
  
    <%= f.label :rating %>
     <%= f.select :rating, Movie::RATINGS, prompt: "Pick one" %>
     </li>
 <li>
    <%=f.label :released_on%>
    <%=f.datetime_select :released_on%>
  </li>
  <li>
    <%=f.label :total_gross%>
    <%=f.number_field :total_gross%>
 </li>
 <li>
  <%= f.label :cast %>
  <%= f.text_field :cast %>
</li>
<li>
  <%= f.label :director %>
  <%= f.text_field :director %>
<li>
  <%= f.label :duration %>
  <%= f.text_field :duration, size: 10 %>
</li>
<li>
  <%= f.label :image_file_name %>
  <%= f.text_field :image_file_name %>
</li>
  </ol>
</fieldset>
 
  
  <p>
    <%=f.submit%> | 
    <%=link_to("Cancel",movies_path)%>
  <p>
  <%end%>